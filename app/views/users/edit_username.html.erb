<h2>Set Your Username</h2>

<%= form_for(@user, url: user_update_username_path) do |f| %>
  <%= f.label :username %><br>
  <%= f.text_field :username %><br>

  <%= f.submit "Save" %>
<% end %>
      
<%= link_to 'アカウントを削除', user_path(current_user), data: {turbo_method: :delete, turbo_confirm: '本当にアカウントを削除してもよろしいですか？' } %>
