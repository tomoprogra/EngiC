<%= turbo_frame_tag item, class: "item" do %>
  <div class="item-content relative">
    <%= link_to user_mypage_item_path(current_user, item), data: { turbo_method: :delete }, class:"absolute top-2 right-2" do%>
    <i class="fa-solid fa-xmark"></i>
    <% end %>
    <% if item.title.present? %>
      <h2><%= item.title %></h2>
      <p><%= item.content %></p>
    <% end %>
    <% if item.qiitaname.present? %>
      <%= link_to "qiita", "https://qiita.com/#{item.qiitaname}", target:"_blank", class:"button" %>
      <%= markdown("[![My Qiita posts](https://qiita-badge.apiapi.app/s/#{item.qiitaname}/posts.svg)](http://qiita.com/#{item.qiitaname})") %>
    <% end %>
</div>
<% end %>