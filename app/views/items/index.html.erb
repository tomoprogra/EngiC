<div class="container mx-auto ">
  <div class="flex mt-7 ml-14">
    <div class="border w-80 my-auto ml-5 rounded-lg">
      <div class="avatar mt-5 ml-5">
        <div class="w-20 rounded-full">
          <%= image_tag(@user.avatar.present? ? @user.avatar.url : "default.png", alt: "アイコン") %>
        </div>
      </div>
      <div class="mt-5 ml-5"> 
        <%= render "users/user", user: @user %>
      </div>
      <div class="mt-5 ml-5 flex"> 
        <p><%= link_to "#{@user.following.count} フォロー", following_user_path(@user) %></p>
        <p><%= link_to "#{@user.followers.count} フォロワー", followers_user_path(@user) %></p>
      </div>
      <div class="mt-5 ml-5 mb-5">
        <div>
          <% @user.skills.each do |skill| %>
            <div class="badge badge-ghost"><%= skill.name %></div>
          <% end %>
        </div>
        <div>
          <%= form_with url: user_skills_path(@user), local: true do |f| %>
            <%= label_tag "skill[name]", "スキルタグ" %>
            <%= text_field_tag "skill[name]", @skill_list, placeholder: "例: Ruby, JavaScript", class: "form-control" %>
            <%= f.submit "更新", class: "btn btn-outline-primary" %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="note_card">
      <div class="grid">
        <% @items.each do |item| %>
          <%= render 'item', item: item, user_id: @user.id%>
        <% end %>
      </div>
    </div>
  </div>
      <div class="tabs mb-10 mr-32 ">
        <div><%= render "form", user: @user, item: @item %></div>
      </div>
</div>


