<div class="navbar">
  <div class="flex-1">
    <%= link_to "Engic.", root_path, class:"corsor-pointer text-xl" %>
  </div>
  <div class="flex-none gap-2">
    <div class="dropdown dropdown-end">
      <div tabindex="0" role="button" class="btn btn-ghost btn-circle avatar">
        <div class="w-10 rounded-full">
          <%= image_tag(current_user.avatar.present? ? current_user.avatar.url : "default.png", alt: "アイコン") %>
        </div>
      </div>
      <ul tabindex="0" class="mt-3 z-20 p-2 shadow menu menu-sm dropdown-content bg-base-100 rounded-box w-52">
        <li>
          <%= link_to 'マイページ', user_mypage_path(current_user) %>
        </li>
        <li><%= link_to 'アカウント設定', user_edit_username_path(current_user) %></li>
        <li><%= link_to 'ログアウト', destroy_user_session_path, data: { turbo_method: :delete }%>
        </li>
        <li><%= link_to 'コネクター画面', users_path(@user) %>
        </li>
      </ul>
    </div>
  </div>
</div>